<Window x:Class="HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="#FF3EC4EC">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="370*"/>
            <ColumnDefinition Width="147*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="507" Grid.ColumnSpan="2" TextChanged="textBox_TextChanged"/>
        <Button x:Name="button" Content="ClickMe" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Width="497" Grid.ColumnSpan="2" Height="71" Click="button_Click"/>
    </Grid>
</Window>
